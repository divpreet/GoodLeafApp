<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:columnCount="9" android:orientation="horizontal"
    android:rowCount="25">

    <Button android:id="@+id/deleteAllPurchases" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_column="0"
        android:layout_columnSpan="6" android:layout_row="2" android:layout_rowSpan="2"
        android:focusableInTouchMode="true" android:paddingLeft="20dp" android:paddingRight="20dp"
        android:text="@string/delete_all_purchases" android:textSize="13sp" />
    <TextView android:layout_height="50dip" android:layout_column="0"
        android:layout_columnSpan="4" android:layout_row="4" android:layout_rowSpan="2"
        android:gravity="center" android:labelFor="@+id/purchaseNumberDelete" android:paddingLeft="20dp"
        android:paddingRight="20dp" android:text="@string/purchase_number"
        android:textSize="13sp" />
    <EditText android:id="@+id/purchaseNumberDelete" android:layout_height="50dip" android:layout_column="4"
        android:layout_columnSpan="5" android:layout_rowSpan="2" android:ems="10"
        android:inputType="number" android:text="" />
    <Button android:id="@+id/searchAndDelete" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_column="1"
        android:layout_columnSpan="6" android:layout_row="10" android:layout_rowSpan="2"
        android:focusableInTouchMode="true" android:paddingLeft="20dp" android:paddingRight="20dp"
        android:text="@string/delete_purchase" android:textSize="13sp" />
</GridLayout>