<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/recentSupplierLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/recent_suppliers_summary" />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/supplierTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:stretchColumns="*">

        <TableRow
            android:id="@+id/supplierSummaryHeading"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="#92C94A"
            android:paddingTop="5dip">

            <TextView
                android:id="@+id/supplierNumber"
                android:paddingBottom="8dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="8dp"
                android:text="@string/supplier_number"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent">

                <View style="@style/Divider" />
            </LinearLayout>

            <TextView
                android:id="@+id/businessName"
                android:paddingBottom="8dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="8dp"
                android:text="@string/business_name"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent">

                <View style="@style/Divider" />
            </LinearLayout>

            <TextView
                android:id="@+id/supplierAddress"
                android:paddingBottom="8dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="8dp"
                android:text="@string/supplier_address"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent">

                <View style="@style/Divider" />
            </LinearLayout>

            <TextView
                android:id="@+id/supplierContact"
                android:paddingBottom="8dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="8dp"
                android:text="@string/supplier_contact"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </TableRow>

    </TableLayout>
</LinearLayout>