<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="9"
    android:orientation="horizontal"
    android:rowCount="25">

    <TextView
        android:layout_height="50dip"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:gravity="center"
        android:labelFor="@+id/supplierNameCreate"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/supplier_name"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/supplierNameCreate"
        android:layout_height="50dip"
        android:layout_column="4"
        android:layout_columnSpan="5"
        android:layout_rowSpan="2"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:layout_height="50dip"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_row="2"
        android:layout_rowSpan="2"
        android:gravity="center"
        android:labelFor="@+id/businessNameCreate"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/business_name"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/businessNameCreate"
        android:layout_height="50dip"
        android:layout_column="4"
        android:layout_columnSpan="5"
        android:layout_rowSpan="2"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:layout_height="50dip"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_row="4"
        android:layout_rowSpan="2"
        android:gravity="center"
        android:labelFor="@+id/supplierAddressCreate"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/supplier_address"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/supplierAddressCreate"
        android:layout_height="50dip"
        android:layout_column="4"
        android:layout_columnSpan="5"
        android:layout_rowSpan="2"
        android:ems="10"
        android:inputType="textPostalAddress"
        android:text="" />


    <TextView
        android:layout_height="50dip"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_row="6"
        android:layout_rowSpan="2"
        android:gravity="center"
        android:labelFor="@+id/supplierContactCreate"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/supplier_contact"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/supplierContactCreate"
        android:layout_height="50dip"
        android:layout_column="4"
        android:layout_columnSpan="5"
        android:layout_rowSpan="2"
        android:ems="10"
        android:inputType="phone"
        android:text="" />

    <TextView
        android:layout_height="50dip"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_row="8"
        android:layout_rowSpan="2"
        android:gravity="center"
        android:labelFor="@+id/supplierAccountNumber"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/supplier_account_number"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/supplierAccountNumber"
        android:layout_height="50dip"
        android:layout_column="4"
        android:layout_columnSpan="5"
        android:layout_rowSpan="2"
        android:ems="10"
        android:inputType="number"
        android:text="" />


    <TextView
        android:layout_height="50dip"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_row="10"
        android:layout_rowSpan="2"
        android:gravity="center"
        android:labelFor="@+id/supplierAccountName"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/supplier_account_name"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/supplierAccountName"
        android:layout_height="50dip"
        android:layout_column="4"
        android:layout_columnSpan="5"
        android:layout_rowSpan="2"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:layout_height="50dip"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_row="12"
        android:layout_rowSpan="2"
        android:gravity="center"
        android:labelFor="@+id/supplierBankName"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/supplier_bank_name"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/supplierBankName"
        android:layout_height="50dip"
        android:layout_column="4"
        android:layout_columnSpan="5"
        android:layout_rowSpan="2"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:layout_height="50dip"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_row="14"
        android:layout_rowSpan="2"
        android:gravity="center"
        android:labelFor="@+id/supplierBankCode"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/supplier_bank_code"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/supplierBankCode"
        android:layout_height="50dip"
        android:layout_column="4"
        android:layout_columnSpan="5"
        android:layout_rowSpan="2"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <Button
        android:id="@+id/createSupplier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="6"
        android:layout_row="16"
        android:layout_rowSpan="2"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/create_supplier"
        android:textSize="13sp" />
</GridLayout>