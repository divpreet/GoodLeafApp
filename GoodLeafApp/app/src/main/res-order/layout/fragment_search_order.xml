<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <GridLayout android:layout_width="match_parent"
        android:layout_height="wrap_content" android:columnCount="9" android:orientation="horizontal"
        android:rowCount="25">

        <TextView android:layout_width="match_parent" android:layout_height="50dip"
            android:layout_column="2" android:layout_columnSpan="4" android:layout_row="0"
            android:layout_rowSpan="2" android:gravity="center" android:paddingLeft="20dp"
            android:paddingRight="20dp" android:text="@string/search_order" android:textSize="13sp" />

        <TextView android:layout_height="50dip" android:layout_column="0"
            android:layout_columnSpan="4" android:layout_row="2" android:layout_rowSpan="2"
            android:gravity="center" android:labelFor="@+id/orderNumberSearch" android:paddingLeft="20dp"
            android:paddingRight="20dp" android:text="@string/order_number"
            android:textSize="13sp" />
        <EditText android:id="@+id/orderNumberSearch" android:layout_height="50dip" android:layout_column="4"
            android:layout_columnSpan="5" android:layout_rowSpan="2" android:ems="10"
            android:inputType="number" android:text="" />

        <TextView android:layout_height="50dip" android:layout_column="0"
            android:layout_columnSpan="4" android:layout_row="4" android:layout_rowSpan="2"
            android:gravity="center" android:labelFor="@+id/orderDateSearch" android:paddingLeft="20dp"
            android:paddingRight="20dp" android:text="@string/order_date"
            android:textSize="13sp" />
        <EditText android:id="@+id/orderDateSearch" android:layout_height="50dip" android:layout_column="4"
            android:layout_columnSpan="5" android:layout_rowSpan="2" android:ems="10"
            android:inputType="date" android:text="" />

        <TextView android:layout_height="50dip" android:layout_column="0"
            android:layout_columnSpan="4" android:layout_row="6" android:layout_rowSpan="2"
            android:gravity="center" android:labelFor="@+id/orderCustomerNameSearch" android:paddingLeft="20dp"
            android:paddingRight="20dp" android:text="@string/customer_name"
            android:textSize="13sp" />

        <Spinner android:id="@+id/orderCustomerNameSearch" android:layout_height="50dip" android:layout_column="4"
            android:layout_columnSpan="5" android:layout_rowSpan="2" android:ems="10" />

        <TextView android:layout_height="50dip" android:layout_column="0"
            android:layout_columnSpan="4" android:layout_row="8" android:layout_rowSpan="2"
            android:gravity="center" android:labelFor="@+id/orderStatusSearch" android:paddingLeft="20dp"
            android:paddingRight="20dp" android:text="@string/status"
            android:textSize="13sp" />
        <EditText android:id="@+id/orderStatusSearch" android:layout_height="50dip" android:layout_column="4"
            android:layout_columnSpan="5" android:layout_rowSpan="2" android:ems="10"
            android:inputType="textPersonName" android:text="" />

        <Button android:id="@+id/searchOrderByFilter" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_column="1"
            android:layout_columnSpan="6" android:layout_row="10" android:layout_rowSpan="2"
            android:focusableInTouchMode="true" android:paddingLeft="20dp" android:paddingRight="20dp"
            android:text="@string/search_order" android:textSize="13sp" />
        <TextView android:layout_width="match_parent" android:layout_height="50dip"
            android:layout_column="2" android:layout_columnSpan="4" android:layout_row="12"
            android:layout_rowSpan="2" android:gravity="center" android:paddingLeft="20dp"
            android:paddingRight="20dp" android:text="@string/search_result" android:textSize="13sp" />
        <FrameLayout android:id="@+id/content_order_search_result" android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_column="1"
            android:layout_columnSpan="6" android:layout_row="14" android:layout_rowSpan="2">

        </FrameLayout>

    </GridLayout>

</ScrollView>