<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/productTableResult"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_column="1"
    android:layout_columnSpan="6"
    android:layout_row="10"
    android:layout_rowSpan="2"
    android:orientation="horizontal"
    android:stretchColumns="*">

    <TableRow
        android:id="@+id/productNumberSearchResult"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="#21C34C"
        android:paddingTop="5dip">

        <TextView
            android:id="@+id/productNumberLabel"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:paddingBottom="8dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="8dp"
            android:text="@string/product_number"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/productNumberResult"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:paddingBottom="8dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="8dp"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </TableRow>

    <TableRow
        android:id="@+id/productDescriptionSearchResult"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="#21C34C"
        android:paddingTop="5dip">

        <TextView
            android:id="@+id/productDescriptionLabel"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:paddingBottom="8dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="8dp"
            android:text="@string/product_description"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/productDescriptionResult"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:paddingBottom="8dp"
            android:paddingLeft="4dp"
            android:inputType="textPersonName"
            android:paddingRight="4dp"
            android:paddingTop="8dp"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </TableRow>

    <TableRow
        android:id="@+id/productPriceSearchResult"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="#21C34C"
        android:paddingTop="5dip">

        <TextView
            android:id="@+id/productPriceLabel"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:paddingBottom="8dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="8dp"
            android:text="@string/product_price"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/productPriceResult"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:paddingBottom="8dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:inputType="number"
            android:paddingTop="8dp"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </TableRow>

    <TableRow
        android:id="@+id/productTypeSearchResult"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="#21C34C"
        android:paddingTop="5dip">

        <TextView
            android:id="@+id/productTypeLabel"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:paddingBottom="8dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="8dp"
            android:text="@string/product_type"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/productTypeResult"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:paddingBottom="8dp"
            android:paddingLeft="4dp"
            android:inputType="textPersonName"
            android:paddingRight="4dp"
            android:paddingTop="8dp"
            android:textColor="@color/white"
            android:textSize="13sp" />

    </TableRow>

    <TableRow android:id="@+id/productSaveOrCancelSearchResult" android:layout_width="fill_parent"
        android:layout_height="match_parent" android:paddingTop="5dip" android:paddingRight="5dip">
        <Button android:id="@+id/saveProduct" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_column="1"
            android:layout_columnSpan="6" android:layout_row="14" android:layout_rowSpan="2"
            android:paddingLeft="20dp" android:paddingRight="20dp" android:text="@string/save_product"
            android:textSize="13sp" />
    </TableRow>

</TableLayout>