<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="9"
    android:orientation="horizontal"
    android:rowCount="25">

    <TextView
        android:layout_height="50dip"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:gravity="center"
        android:labelFor="@+id/productDescriptionCreate"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/product_description"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/productDescriptionCreate"
        android:layout_height="50dip"
        android:layout_column="4"
        android:layout_columnSpan="5"
        android:layout_rowSpan="2"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:layout_height="50dip"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_row="2"
        android:layout_rowSpan="2"
        android:gravity="center"
        android:labelFor="@+id/productPriceCreate"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/product_price"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/productPriceCreate"
        android:layout_height="50dip"
        android:layout_column="4"
        android:layout_columnSpan="5"
        android:layout_rowSpan="2"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="" />

    <TextView
        android:layout_height="50dip"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_row="4"
        android:layout_rowSpan="2"
        android:gravity="center"
        android:labelFor="@+id/productTypeCreate"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/product_type"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/productTypeCreate"
        android:layout_height="50dip"
        android:layout_column="4"
        android:layout_columnSpan="5"
        android:layout_rowSpan="2"
        android:ems="10"
        android:inputType="textPostalAddress"
        android:text="" />

    <Button
        android:id="@+id/createProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="6"
        android:layout_row="14"
        android:layout_rowSpan="2"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/create_product"
        android:textSize="13sp" />
</GridLayout>