<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <GridLayout android:layout_width="match_parent"
        android:layout_height="wrap_content" android:columnCount="9" android:orientation="horizontal"
        android:rowCount="25">

        <TextView android:layout_width="match_parent" android:layout_height="50dip"
            android:layout_column="2" android:layout_columnSpan="4" android:layout_row="0"
            android:layout_rowSpan="2" android:gravity="center" android:paddingLeft="20dp"
            android:paddingRight="20dp" android:text="@string/search_shipment" android:textSize="13sp" />

        <TextView android:layout_height="50dip" android:layout_column="0"
            android:layout_columnSpan="4" android:layout_row="2" android:layout_rowSpan="2"
            android:gravity="center" android:labelFor="@+id/shipmentNumberSearch" android:paddingLeft="20dp"
            android:paddingRight="20dp" android:text="@string/shipment_number"
            android:textSize="13sp" />
        <EditText android:id="@+id/shipmentNumberSearch" android:layout_height="50dip" android:layout_column="4"
            android:layout_columnSpan="5" android:layout_rowSpan="2" android:ems="10"
            android:inputType="number" android:text="" />

        <TextView android:layout_height="50dip" android:layout_column="0"
            android:layout_columnSpan="4" android:layout_row="4" android:layout_rowSpan="2"
            android:gravity="center" android:labelFor="@+id/shipmentDateSearch" android:paddingLeft="20dp"
            android:paddingRight="20dp" android:text="@string/shipment_date"
            android:textSize="13sp" />
        <EditText android:id="@+id/shipmentDateSearch" android:layout_height="50dip" android:layout_column="4"
            android:layout_columnSpan="5" android:layout_rowSpan="2" android:ems="10"
            android:inputType="date" android:text="" />

        <TextView android:layout_height="50dip" android:layout_column="0"
            android:layout_columnSpan="4" android:layout_row="6" android:layout_rowSpan="2"
            android:gravity="center" android:labelFor="@+id/shipmentOrderNoSearch" android:paddingLeft="20dp"
            android:paddingRight="20dp" android:text="@string/order_number"
            android:textSize="13sp" />
        <Spinner android:id="@+id/shipmentOrderNoSearch" android:layout_height="50dip" android:layout_column="4"
            android:layout_columnSpan="5" android:layout_rowSpan="2" android:ems="10"/>

        <TextView android:layout_height="50dip" android:layout_column="0"
            android:layout_columnSpan="4" android:layout_row="8" android:layout_rowSpan="2"
            android:gravity="center" android:labelFor="@+id/shipmentProductNameSearch" android:paddingLeft="20dp"
            android:paddingRight="20dp" android:text="@string/product_description"
            android:textSize="13sp" />

        <Spinner android:id="@+id/shipmentProductNameSearch" android:layout_height="50dip" android:layout_column="4"
            android:layout_columnSpan="5" android:layout_rowSpan="2" android:ems="10" />


        <Button android:id="@+id/searchShipmentByFilter" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_column="1"
            android:layout_columnSpan="6" android:layout_row="10" android:layout_rowSpan="2"
            android:focusableInTouchMode="true" android:paddingLeft="20dp" android:paddingRight="20dp"
            android:text="@string/search_shipment" android:textSize="13sp" />
        <TextView android:layout_width="match_parent" android:layout_height="50dip"
            android:layout_column="2" android:layout_columnSpan="4" android:layout_row="18"
            android:layout_rowSpan="2" android:gravity="center" android:paddingLeft="20dp"
            android:paddingRight="20dp" android:text="@string/search_result" android:textSize="13sp" />
        <FrameLayout android:id="@+id/content_shipment_search_result" android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_column="1"
            android:layout_columnSpan="6" android:layout_row="20" android:layout_rowSpan="2">

        </FrameLayout>

    </GridLayout>

</ScrollView>