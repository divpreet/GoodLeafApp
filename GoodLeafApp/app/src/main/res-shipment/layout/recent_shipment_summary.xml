<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/recentShipmentLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/recent_shipments_summary" />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/shipmentTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:stretchColumns="*">

        <TableRow
            android:id="@+id/shipmentSummaryHeading"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="#92C94A"
            android:paddingTop="5dip">

            <TextView
                android:id="@+id/shipmentNumber"
                android:paddingBottom="8dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="8dp"
                android:text="@string/shipment_number"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent">

                <View style="@style/Divider" />
            </LinearLayout>

            <TextView
                android:id="@+id/shipmentDate"
                android:paddingBottom="8dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="8dp"
                android:text="@string/shipment_date"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent">

                <View style="@style/Divider" />
            </LinearLayout>

            <TextView
                android:id="@+id/orderNumber"
                android:paddingBottom="8dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="8dp"
                android:text="@string/order_number"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent">

                <View style="@style/Divider" />
            </LinearLayout>

            <TextView
                android:id="@+id/productNumber"
                android:paddingBottom="8dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="8dp"
                android:text="@string/product_number"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent">

                <View style="@style/Divider" />
            </LinearLayout>

            <TextView
                android:id="@+id/quantity"
                android:paddingBottom="8dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="8dp"
                android:text="@string/quantity"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </TableRow>

    </TableLayout>
</LinearLayout>