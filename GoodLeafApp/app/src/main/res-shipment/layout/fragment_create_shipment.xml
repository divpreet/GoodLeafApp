<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <GridLayout android:id="@+id/shipmentCreateGrid"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:columnCount="9"
        android:orientation="horizontal" android:rowCount="25">

        <TextView android:layout_height="50dip" android:layout_column="0"
            android:layout_columnSpan="4" android:layout_row="2" android:layout_rowSpan="2"
            android:gravity="center" android:labelFor="@+id/shipmentOrderNoCreate" android:paddingLeft="20dp"
            android:paddingRight="20dp" android:text="@string/order_number"
            android:textSize="13sp" />

        <Spinner
            android:id="@+id/shipmentOrderNoCreate" android:layout_height="50dip" android:layout_column="4"
            android:layout_columnSpan="5" android:layout_rowSpan="2" android:ems="10"/>

        <TextView android:layout_height="50dip" android:layout_column="0"
            android:layout_columnSpan="4" android:layout_row="4" android:layout_rowSpan="2"
            android:gravity="center" android:labelFor="@+id/shipmentProductNameCreate" android:paddingLeft="20dp"
            android:paddingRight="20dp" android:text="@string/product_description"
            android:textSize="13sp" />

        <Spinner android:layout_height="50dip" android:layout_column="4"
            android:layout_columnSpan="5" android:layout_rowSpan="2" android:ems="10"
            android:id="@+id/shipmentProductNameCreate" />

        <TextView android:layout_height="50dip" android:layout_column="0"
            android:layout_columnSpan="4" android:layout_row="6" android:layout_rowSpan="2"
            android:gravity="center" android:labelFor="@+id/shipmentQuantityCreate" android:paddingLeft="20dp"
            android:paddingRight="20dp" android:text="@string/quantity"
            android:textSize="13sp" />

        <EditText android:layout_height="50dip"
            android:inputType="number"
            android:id="@+id/shipmentQuantityCreate"
            android:layout_width="wrap_content"
            android:textSize="13sp" />

        <TextView android:layout_height="50dip" android:layout_column="0"
            android:layout_columnSpan="4" android:layout_row="8" android:layout_rowSpan="2"
            android:gravity="center" android:labelFor="@+id/shipmentQuantityCreate" android:paddingLeft="20dp"
            android:paddingRight="20dp" android:text="@string/misc_charges"
            android:textSize="13sp" />

        <EditText android:layout_height="50dip"
            android:inputType="number"
            android:id="@+id/shipmentMiscChargesCreate"
            android:layout_width="wrap_content"
            android:textSize="13sp" />

        <Button android:id="@+id/createShipment" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_column="1"
            android:layout_columnSpan="6" android:layout_rowSpan="2"
            android:paddingLeft="20dp" android:paddingRight="20dp" android:text="@string/create_shipment"
            android:textSize="13sp" />

    </GridLayout>
</ScrollView>