<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recentCustomerLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recent_summary" />

            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/overallBalancesTable"
                android:stretchColumns="*">

                <TableRow
                    android:id="@+id/recentSummaryHeading"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="#92C94A"
                    android:paddingTop="5dip">

                    <TextView
                        android:id="@+id/customerName"
                        android:paddingBottom="8dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:paddingTop="8dp"
                        android:text="@string/customer_name_or_supplier_name"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent">

                        <View style="@style/Divider" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/overalBalance"
                        android:paddingBottom="8dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:paddingTop="8dp"
                        android:text="@string/overall_balance"
                        android:textColor="@color/white"
                        android:textSize="13sp" />


                </TableRow>
            </TableLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>