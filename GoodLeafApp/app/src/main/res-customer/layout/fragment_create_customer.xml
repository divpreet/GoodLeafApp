<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:columnCount="9"
    android:orientation="horizontal" android:rowCount="25">

    <TextView android:layout_height="50dip" android:layout_column="0"
        android:layout_columnSpan="4" android:layout_row="0" android:layout_rowSpan="2"
        android:gravity="center" android:labelFor="@+id/customerNameCreate" android:paddingLeft="20dp"
        android:paddingRight="20dp" android:text="@string/customer_name"
        android:textSize="13sp" />

    <EditText android:id="@+id/customerNameCreate" android:layout_height="50dip" android:layout_column="4"
        android:layout_columnSpan="5" android:layout_rowSpan="2" android:ems="10"
        android:inputType="textPersonName" android:text="" />

    <TextView android:layout_height="50dip" android:layout_column="0"
        android:layout_columnSpan="4" android:layout_row="2" android:layout_rowSpan="2"
        android:gravity="center" android:labelFor="@+id/businessNameCreate" android:paddingLeft="20dp"
        android:paddingRight="20dp" android:text="@string/business_name"
        android:textSize="13sp" />

    <EditText android:id="@+id/businessNameCreate" android:layout_height="50dip" android:layout_column="4"
        android:layout_columnSpan="5" android:layout_rowSpan="2" android:ems="10"
        android:inputType="textPersonName" android:text="" />

    <TextView android:layout_height="50dip" android:layout_column="0"
        android:layout_columnSpan="4" android:layout_row="4" android:layout_rowSpan="2"
        android:gravity="center" android:labelFor="@+id/customerAddressCreate" android:paddingLeft="20dp"
        android:paddingRight="20dp" android:text="@string/customer_address"
        android:textSize="13sp" />

    <EditText android:id="@+id/customerAddressCreate" android:layout_height="50dip" android:layout_column="4"
        android:layout_columnSpan="5" android:layout_rowSpan="2" android:ems="10"
        android:inputType="textPostalAddress" android:text="" />


    <TextView android:layout_height="50dip" android:layout_column="0"
        android:layout_columnSpan="4" android:layout_row="6" android:layout_rowSpan="2"
        android:gravity="center" android:labelFor="@+id/customerContactCreate" android:paddingLeft="20dp"
        android:paddingRight="20dp" android:text="@string/customer_contact"
        android:textSize="13sp" />

    <EditText android:id="@+id/customerContactCreate" android:layout_height="50dip" android:layout_column="4"
        android:layout_columnSpan="5" android:layout_rowSpan="2" android:ems="10"
        android:inputType="phone" android:text="" />

    <TextView android:layout_height="50dip" android:layout_column="0"
        android:layout_columnSpan="4" android:layout_row="8" android:layout_rowSpan="2"
        android:gravity="center" android:labelFor="@+id/customerAddress1Create" android:paddingLeft="20dp"
        android:paddingRight="20dp" android:text="@string/customer_address2"
        android:textSize="13sp" />

    <EditText android:id="@+id/customerAddress1Create" android:layout_height="50dip" android:layout_column="4"
        android:layout_columnSpan="5" android:layout_rowSpan="2" android:ems="10"
        android:inputType="textPostalAddress" android:text="" />


    <TextView android:layout_height="50dip" android:layout_column="0"
        android:layout_columnSpan="4" android:layout_row="10" android:layout_rowSpan="2"
        android:gravity="center" android:labelFor="@+id/customerContact1Create" android:paddingLeft="20dp"
        android:paddingRight="20dp" android:text="@string/customer_contact2"
        android:textSize="13sp" />

    <EditText android:id="@+id/customerContact1Create" android:layout_height="50dip" android:layout_column="4"
        android:layout_columnSpan="5" android:layout_rowSpan="2" android:ems="10"
        android:inputType="phone" android:text="" />

    <Button android:id="@+id/createCustomer" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_column="1"
        android:layout_columnSpan="6" android:layout_row="14" android:layout_rowSpan="2"
        android:paddingLeft="20dp" android:paddingRight="20dp" android:text="@string/create_customer"
        android:textSize="13sp" />
</GridLayout>