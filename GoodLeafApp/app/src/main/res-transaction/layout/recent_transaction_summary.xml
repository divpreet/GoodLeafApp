<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/recentTransactionLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/recent_transactions_summary" />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/transactionTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:stretchColumns="*">

        <TableRow
            android:id="@+id/transactionSummaryHeading"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="#92C94A"
            android:paddingTop="5dip">

            <TextView
                android:id="@+id/transactionNumber"
                android:paddingBottom="8dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="8dp"
                android:text="@string/transaction_number"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent">

                <View style="@style/Divider" />
            </LinearLayout>

            <TextView
                android:id="@+id/transactionDate"
                android:paddingBottom="8dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="8dp"
                android:text="@string/transaction_date"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent">

                <View style="@style/Divider" />
            </LinearLayout>

            <TextView
                android:id="@+id/transactionValue"
                android:paddingBottom="8dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="8dp"
                android:text="@string/amount"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent">

                <View style="@style/Divider" />
            </LinearLayout>

            <TextView
                android:id="@+id/transactionWith"
                android:paddingBottom="8dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="8dp"
                android:text="@string/transaction_with"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </TableRow>

    </TableLayout>
</LinearLayout>